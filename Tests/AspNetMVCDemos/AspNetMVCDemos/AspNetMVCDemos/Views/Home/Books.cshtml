@model List<AspNetMVCDemos.Models.BookViewModel>

@using (Ajax.BeginForm("Search",
    new AjaxOptions
    {
        UpdateTargetId = "results",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST"
    }))
{
    <input type="text" name="query" />
    <input type="submit" />
}

<div id="results">
    @Html.Partial("_BookResult", Model)
</div>
